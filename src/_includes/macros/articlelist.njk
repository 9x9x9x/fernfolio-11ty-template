{% macro articlelist(items, show_tags = true, limit) %}
  <section>
  {% for post in items | reverse %}
    {% if limit === undefined or loop.index0 < limit %}
      <article class="article-card" {% if post.url == url %} data-current="current item"{% endif %}>
        <h5>
          <a class="article-card__title" href="{{ post.url | url }}">
            {% if post.data.title %}
              {{ post.data.title }}
            {% else %}
              Untitled
            {% endif %}
          </a>
        </h5>
        {% if post.data.summary %}
          <p class="article-card__summary">
            {{ post.data.summary }}
          </p>
        {% endif %}
        {% if post.data.tags and show_tags %}
          <p class="tag-list">
            {% for tag in post.data.tags %}
              {%- if tag != "post" -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
              {%- endif -%}
            {% endfor %}
          </p>
        {% endif %}
      </article>
    {% endif %}
  {% endfor %}
  </section>
{% endmacro %}